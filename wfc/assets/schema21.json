{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Script",
  "description": "A bot script",
  "type": "object",
  "required": ["flows", "version"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "description": "The version of this Script",
      "type": "string",
      "enum": ["2.1.0"]
    },
    "nlp_fallback": {
      "description": "What the bot will say when NLP doesn't recognize an intent",
      "type": "string",
      "minLength": 1
    },
    "qna_followup": {
      "description": "what flow the bot will jump to after answering a question using the qna service",
      "type": "string",
      "minLength": 1
    },
    "unexpected_error_flow": {
      "description": "what the bot will say when an unexpected error happens",
      "type": "string",
      "minLength": 1
    },
    "intents": {
      "description": "List of intents that can be spotted by the NLP Engine",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "flow": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["name", "flow"],
        "additionalProperties": false
      }
    },
    "commands": {
      "description": "List of commands that can be spotted by the Bot",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "keyword": {
            "type": "string",
            "minLength": 1
          },
          "flow": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["keyword", "flow"],
        "additionalProperties": false
      }
    },
    "flows": {
      "description": "List of bot Script available flows",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "actions": {
            "description": "List of Actions a Flow will execute",
            "type": "array",
            "items": {
              "oneOf": [
                { "$ref": "#/definitions/sendText" },
                { "$ref": "#/definitions/waitInput" },
                { "$ref": "#/definitions/changeFlow" },
                { "$ref": "#/definitions/callIntegration" },
                { "$ref": "#/definitions/openFlow" },
                { "$ref": "#/definitions/setVar" },
                { "$ref": "#/definitions/sendMenu" },
                { "$ref": "#/definitions/sendDynamicCarousel" },
                { "$ref": "#/definitions/sendStaticCarousel" },
                { "$ref": "#/definitions/sendMedia" },
                { "$ref": "#/definitions/subscribeFeed" },
                { "$ref": "#/definitions/unsubscribeFeed" },
                { "$ref": "#/definitions/askForInput" },
                { "$ref": "#/definitions/handoff" },
                { "$ref": "#/definitions/if" }
              ]
            },
            "additionalProperties": false
          }
        },
        "required": ["name", "actions"],
        "additionalProperties": false
      }
    }
  },
  "definitions": {
    "buttons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "payload": {
            "type": [
              "object",
              "string"
            ]
          },
          "type": {
            "type": "string",
            "minLength": 1
          },
          "flow": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["label"],
        "additionalProperties": false
      },
      "minItems": 1
    },
    "expect": {
      "type": "object",
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "attachment_types": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "payload": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "fallback": {
          "type": "string",
          "minLength": 1
        },
        "can_switch_content": {
          "type": "boolean"
        }
      },
      "required": ["fallback"],
      "additionalProperties": false
    },
    "sendText": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "send_text": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "text": {
              "type": "string",
              "minLength": 1
            },
            "one_of": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            }
          }
        }
      },
      "required": ["id", "send_text"],
      "additionalProperties": false
    },
    "waitInput": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "wait_input": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "var_name": {
              "type": "string",
              "minLength": 1
            },
            "expect": {
              "$ref": "#/definitions/expect"
            }
          },
          "required": ["var_name"],
          "additionalProperties": false
        }
      },
      "required": ["id", "wait_input"],
      "additionalProperties": false
    },
    "askForInput": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "ask_for_input": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "text": {
              "type": "string",
              "minLength": 1
            },
            "var_name": {
              "type": "string",
              "minLength": 1
            },
            "quick_replies": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            },
            "expect": {
              "$ref": "#/definitions/expect"
            }
          },
          "required": ["var_name", "text"],
          "additionalProperties": false
        }
      },
      "required": ["id", "ask_for_input"],
      "additionalProperties": false
    },
    "openFlow": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "open_flow": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "flow": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["flow"],
          "additionalProperties": false
        }
      },
      "required": ["id", "open_flow"],
      "additionalProperties": false
    },
    "setVar": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "set_var": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "var_name": {
              "type": "string",
              "minLength": 1
            },
            "value": {
              "minLength": 1
            }
          },
          "required": ["var_name", "value"],
          "additionalProperties": false
        }
      },
      "required": ["id", "set_var"],
      "additionalProperties": false
    },
    "changeFlow": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "change_flow": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "flow": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["flow"],
          "additionalProperties": false
        }
      },
      "required": ["id", "change_flow"],
      "additionalProperties": false
    },
    "sendMenu": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "send_menu": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "text": {
              "type": "string",
              "minLength": 1
            },
            "buttons": {
              "$ref": "#/definitions/buttons"
            }
          },
          "required": ["buttons"],
          "additionalProperties": false
        }
      },
      "required": ["id", "send_menu"],
      "additionalProperties": false
    },
    "sendMedia": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "send_media": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "media_type": {
              "type": "string",
              "minLength": 1
            },
            "url": {
              "type": "string",
              "minLength": 1
            },
            "media_id": {
              "type": "string",
              "minLength": 1
            },
            "buttons": {
              "$ref": "#/definitions/buttons"
            }
          },
          "required": ["media_type"],
          "additionalProperties": false
        }
      },
      "required": ["id", "send_media"],
      "additionalProperties": false
    },
    "subscribeFeed": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "subscribe_feed": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "feed": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["feed"],
          "additionalProperties": false
        }
      },
      "required": ["id", "subscribe_feed"],
      "additionalProperties": false
    },
    "unsubscribeFeed": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "unsubscribe_feed": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "feed": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["feed"],
          "additionalProperties": false
        }
      },
      "required": ["id", "unsubscribe_feed"],
      "additionalProperties": false
    },
    "handoff": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "handoff": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "assignee": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["assignee"],
          "additionalProperties": false
        }
      },
      "required": ["id", "handoff"],
      "additionalProperties": false
    },
    "callIntegration": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "call_integration": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "integration": {
              "type": "string",
              "minLength": 1
            },
            "function": {
              "type": "string",
              "minLength": 1
            },
            "function_params": {
              "type": "array",
              "items": {
                "minLength": 1
              }
            },
            "errors": {
              "type": "object",
              "patternProperties": {
                "^on_": {
                  "type": "object",
                  "properties": {
                    "jump": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": ["jump"]
                }
              },
              "additionalProperties": false,
              "minProperties": 1
            }
          },
          "required": ["integration", "function"],
          "additionalProperties": false
        }
      },
      "required": ["id", "call_integration"],
      "additionalProperties": false
    },
    "sendDynamicCarousel": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "send_dynamic_carousel": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "content_source": {
              "type": "string",
              "minLength": 2
            },
            "card_content": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 2
                },
                "description": {
                  "type": "string",
                  "minLength": 2
                },
                "image_url": {
                  "type": "string",
                  "minLength": 2
                },
                "buttons": {
                  "$ref": "#/definitions/buttons"
                }
              },
              "required": ["title"],
              "additionalProperties": false
            }
          },
          "required": ["content_source", "card_content"],
          "additionalProperties": false
        }
      },
      "required": ["id", "send_dynamic_carousel"],
      "additionalProperties": false
    },
    "sendStaticCarousel": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "send_static_carousel": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "cards": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 1
                  },
                  "description": {
                    "type": "string",
                    "minLength": 1
                  },
                  "image_url": {
                    "type": "string",
                    "minLength": 1
                  },
                  "buttons": {
                    "$ref": "#/definitions/buttons"
                  }
                },
                "required": ["title"]
              }
            }
          },
          "required": ["cards"]
        }
      },
      "required": ["id", "send_static_carousel"],
      "additionalProperties": false
    },
    "if": {
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "if": {
          "type": "object",
          "properties": {
            "condition": {
              "$ref": "#/definitions/expression"
            },
            "then": {
              "type": "string",
              "minLength": 1
            },
            "else": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["condition", "then"]
        }
      },
      "required": ["id", "if"],
      "additionalProperties": false
    },
    "unaryOperators": {
      "type": "string",
      "enum": ["is_empty", "is_not_empty"]
    },
    "binaryOperators": {
      "type": "string",
      "enum": ["equal", "not_equal", "has_entity"]
    },
    "operands": {
      "anyOf": [
        { "type": "string" },
        { "type": "boolean" },
        { "type": "number" },
        { "$ref": "#/definitions/expression" }
      ]
    },
    "operators": {
      "anyOf": [
        { "$ref": "#/definitions/unaryOperators" },
        { "$ref": "#/definitions/binaryOperators" }
      ]
    },
    "expression": {
      "type": "array",
      "items": [
        { "$ref": "#/definitions/operands" },
        { "$ref": "#/definitions/operators" },
        { "$ref": "#/definitions/operands" }
      ],
      "minItems": 2,
      "maxItems": 3
    },
    "id": {
      "type": "string",
      "minLength": 1
    }
  }
}
