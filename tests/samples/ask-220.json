{
  "version": "2.2.0",
  "flows": [
    {
      "name": "onboarding",
      "actions": [
        {
          "ask_for_input": {
            "text": "Some question",
            "var_name": "response"
          }
        },
        {
          "send_text": {
            "text": "The response is: {{$response}}"
          }
        },
        {
          "ask_for_input": {
            "text": "Some other question",
            "var_name": "response",
            "can_switch_context": false
          }
        }
      ]
    }
  ]
}
